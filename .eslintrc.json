{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    // 继承其它的eslint的配置（具体哪些规则打开，哪些规则关闭）
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    // 语法解析器
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    // 规则合集
    "plugins": [
        "@typescript-eslint"
    ],
    // 具体的eslint规则
    "rules": {
        "semi": ["error", "always"],
        "eqeqeq": "error",
        "quotes": ["warn", "double", "avoid-escape"],
        "@typescript-eslint/no-explicit-any": ["off"]
    }
}